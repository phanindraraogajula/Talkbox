generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// -------------------- USERS --------------------
model User {
  id        Int      @id @default(autoincrement())
  userId    String   @unique
  firstName String?
  lastName  String?
  password  String
  friends   String[] @default([])
  createdAt DateTime @default(now())

  // Global chat relations
  sentMessages     Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("PrivateMessages")

  // Private messages using usernames
  sentPrivateMessages     PrivateMessage[] @relation("SentPrivateMessages")
  receivedPrivateMessages PrivateMessage[] @relation("ReceivedPrivateMessages")

  // Groups
  groups        Group[]        @relation("UserGroups") // Many-to-many
  groupMessages GroupMessage[]
}

// -------------------- GROUPS --------------------
model Group {
  id        Int            @id @default(autoincrement())
  name      String
  members   User[]         @relation("UserGroups") // Many-to-many
  messages  GroupMessage[]
  createdAt DateTime       @default(now())
}

// -------------------- GLOBAL MESSAGES --------------------
model Message {
  id         Int      @id @default(autoincrement())
  content    String
  senderId   Int
  receiverId Int? // null = global chat
  createdAt  DateTime @default(now())

  sender   User  @relation("SentMessages", fields: [senderId], references: [id])
  receiver User? @relation("PrivateMessages", fields: [receiverId], references: [id])
}

// -------------------- PRIVATE MESSAGES --------------------
model PrivateMessage {
  id         Int      @id @default(autoincrement())
  content    String
  senderId   String
  receiverId String
  createdAt  DateTime @default(now())

  sender   User @relation("SentPrivateMessages", fields: [senderId], references: [userId])
  receiver User @relation("ReceivedPrivateMessages", fields: [receiverId], references: [userId])
}

// -------------------- GROUP MESSAGES --------------------
model GroupMessage {
  id        Int      @id @default(autoincrement())
  content   String
  groupId   Int
  senderId  Int
  createdAt DateTime @default(now())

  sender User  @relation(fields: [senderId], references: [id])
  group  Group @relation(fields: [groupId], references: [id])
}
